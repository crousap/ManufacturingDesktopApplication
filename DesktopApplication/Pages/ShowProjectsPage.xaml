<Page
    x:Class="DesktopApplication.Pages.ShowProjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:DesktopApplication.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ShowProjectsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <StackPanel Name="topToolPannel" Orientation="Horizontal">
            <materialDesign:ColorZone
                Margin="10,5,0,5"
                Padding="8,4,8,4"
                VerticalAlignment="Center"
                Panel.ZIndex="1"
                materialDesign:ShadowAssist.ShadowDepth="Depth1"
                CornerRadius="2"
                Mode="Standard">
                <!--  Search bar  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="TextBoxSearchBar"
                        Grid.Column="1"
                        MinWidth="250"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Поиск"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        BorderThickness="0"
                        Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </materialDesign:ColorZone>
            <!--  Filter box  -->
            <ComboBox
                x:Name="comboBoxFilter"
                Width="250"
                Margin="10,2.5,0,2.5"
                materialDesign:HintAssist.Hint="Фильтр"
                DisplayMemberPath="Name"
                IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"
                ItemsSource="{Binding Statuses}"
                SelectedItem="{Binding CurrentFilter}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" />
            <Button
                Margin="10,0,0,0"
                Command="{Binding AddNewProjectCommand}"
                Content="Новый проект" />
        </StackPanel>
        <!--  Users List  -->
        <ListView
            Name="listViewUsers"
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding Projects}"
            SelectedItem="{Binding SelectedProject}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="45">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Margin="5" Orientation="Vertical">
                                    <TextBlock>
                                        <Run Text="{Binding Path=Name}" FontWeight="Bold"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding Path=Status}"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Description}"/>
                                    <ListView ItemsSource="{Binding WarehouseDependecies}" SelectedItem="{Binding SelectedWarehouse}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding Path=Name}" IsChecked="{Binding WarehouseIsChecked}" />
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
