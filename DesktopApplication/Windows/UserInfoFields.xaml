<Window
    x:Class="DesktopApplication.Windows.UserInfoFields"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApplication.Windows"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DesktopApplication.ViewModels"
    xmlns:vr="clr-namespace:DesktopApplication.Services"
    Title="UserInfoFields"
    Width="350"
    Height="650"
    Icon="pack://application:,,,/Resources/logo.png"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Name="mainGrid">
        <StackPanel
            Name="wrapper"
            Width="300"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <StackPanel
                Name="infoPanel"
                Margin="10"
                Orientation="Vertical">
                <TextBox
                    Name="textBoxFirstName"
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Имя"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding FirstName}" />
                <TextBox
                    Name="textBoxLastName"
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Фамилия"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding LastName}" />
                <TextBox
                    Name="textBoxSecondName"
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Отчество"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding MiddleName}" />
                <DatePicker
                    Name="datePickerBirthdate"
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Дата рождения"
                    SelectedDate="{Binding BirthDate}" />
            </StackPanel>
            <StackPanel
                Name="contactPanel"
                Margin="10"
                Orientation="Vertical">
                <TextBox
                    Name="textBoxPhoneNumber"
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Телефонный номер"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding PhoneNumber}" />
                <TextBox
                    Name="textBoxEmail"
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Электронная почта"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Email}" />
                <TextBox
                    Name="textBoxAddress"
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Адрес"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding ResidantialAddress}" />
            </StackPanel>
        </StackPanel>
        <Button
            Name="buttonClose"
            Margin="10"
            VerticalAlignment="Bottom"
            Command="{Binding SaveChangesCommand}"
            Content="Записать" />
    </Grid>
</Window>
