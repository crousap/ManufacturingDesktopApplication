<Window
    x:Class="DesktopApplication.Windows.PagesHolder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApplication.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DesktopApplication.ViewModels"
    Title="{Binding WindowTitle}"
    Width="1200"
    Height="700"
    MinWidth="800"
    MinHeight="755"
    Icon="pack://application:,,,/Resources/logo.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:PagesHolderViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="ButtonLogOff" HorizontalAlignment="Right" Content="Выйти" Click="ButtonLogOff_Click"/>
        <Frame Name="frameMain" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
