<Window x:Class="DesktopApplication.Windows.StockInfoFields"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DesktopApplication.Windows"
        mc:Ignorable="d"
        Title="StockInfoFields" Height="500" Width="650"
        MinWidth="500"
        MinHeight="400">
    <Grid Name="mainGrid">
        <!-- Общий wrapper -->
        <WrapPanel
            Name="wrapper"
            Margin="0,50"
            HorizontalAlignment="Center"
            Orientation="Vertical">
            <!-- Wrapper полей -->
            <StackPanel
                Width="300"
                Name="infoPanel"
                Orientation="Vertical">
                <TextBox
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Идентификатор"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Id}" />
                <TextBox
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Наименование"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Name}" />
                <TextBox
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Колличество"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Ammount}" />
                <TextBox
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Позиция"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Position}" />
            </StackPanel>
            <!-- Описание -->
                <TextBox
                    HorizontalAlignment="Center"
                    Width="450"
                    Margin="0, 10"
                    materialDesign:HintAssist.Hint="Описание"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Description}" />
        </WrapPanel>
        <Button
            Name="buttonClose"
            Margin="50, 0, 50, 10"
            VerticalAlignment="Bottom"
            Command="{Binding SaveChangesCommand}"
            Content="Записать" />
    </Grid>
</Window>
